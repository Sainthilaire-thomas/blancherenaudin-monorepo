{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "‚ú® G√©n√©rer un tool complet (interactif)",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy", "Bypass",
        "-File", "${workspaceFolder}/scripts/generate-tool.ps1"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "showReuseMessage": false,
        "clear": true,
        "focus": true
      },
      "problemMatcher": []
    },
    {
      "label": "üöÄ Cr√©er un nouveau tool",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy", "Bypass",
        "-File", "${workspaceFolder}/scripts/create-tool.ps1",
        "-ToolName", "${input:toolName}"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "üöÄ Cr√©er un nouveau tool (avec API)",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy", "Bypass",
        "-File", "${workspaceFolder}/scripts/create-tool.ps1",
        "-ToolName", "${input:toolName}",
        "-WithAPI"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "üöÄ Cr√©er un nouveau tool (minimal)",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy", "Bypass",
        "-File", "${workspaceFolder}/scripts/create-tool.ps1",
        "-ToolName", "${input:toolName}",
        "-Minimal"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "üîç Valider un tool",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy", "Bypass",
        "-File", "${workspaceFolder}/scripts/validate-tool.ps1",
        "-ToolName", "${input:toolName}"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "üîç Valider un tool (verbose)",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy", "Bypass",
        "-File", "${workspaceFolder}/scripts/validate-tool.ps1",
        "-ToolName", "${input:toolName}",
        "-Verbose"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "üîß Valider un tool (avec correction auto)",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy", "Bypass",
        "-File", "${workspaceFolder}/scripts/validate-tool.ps1",
        "-ToolName", "${input:toolName}",
        "-Fix"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "üèóÔ∏è Build un tool sp√©cifique",
      "type": "shell",
      "command": "pnpm",
      "args": [
        "--filter",
        "@repo/tools-${input:toolName}",
        "build"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "üîé Type-check un tool sp√©cifique",
      "type": "shell",
      "command": "pnpm",
      "args": [
        "--filter",
        "@repo/tools-${input:toolName}",
        "type-check"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "üßπ Nettoyer cache Next.js",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-Command",
        "Remove-Item -Path '${workspaceFolder}/apps/admin/.next' -Recurse -Force -ErrorAction SilentlyContinue; Write-Host 'Cache nettoy√©' -ForegroundColor Green"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "üì¶ R√©installer d√©pendances",
      "type": "shell",
      "command": "pnpm",
      "args": ["install"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "üöÄ Dev - Admin App",
      "type": "shell",
      "command": "pnpm",
      "args": ["--filter", "apps/admin", "dev"],
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "problemMatcher": {
        "owner": "typescript",
        "fileLocation": "relative",
        "pattern": {
          "regexp": "^([^:]+):(\\d+):(\\d+):\\s+(error|warning|info)\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "compiling",
          "endsPattern": "(Compiled|Failed to compile)"
        }
      }
    },
    {
      "label": "üèóÔ∏è Build - Tous les packages",
      "type": "shell",
      "command": "pnpm",
      "args": ["build"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "üîé Type-check - Tous les packages",
      "type": "shell",
      "command": "pnpm",
      "args": ["type-check"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "üß™ Tests - Tous les packages",
      "type": "shell",
      "command": "pnpm",
      "args": ["test"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "üé® Lint - Tous les packages",
      "type": "shell",
      "command": "pnpm",
      "args": ["lint"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": ["$eslint-stylish"]
    },
    {
      "label": "üè• Diagnostic complet du monorepo",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy", "Bypass",
        "-File", "${workspaceFolder}/scripts/diagnose.ps1"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "üè• Diagnostic rapide (sans build)",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy", "Bypass",
        "-File", "${workspaceFolder}/scripts/diagnose.ps1",
        "-Quick"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "üè• Diagnostic d'un tool sp√©cifique",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy", "Bypass",
        "-File", "${workspaceFolder}/scripts/diagnose.ps1",
        "-Tool", "${input:toolName}"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "toolName",
      "type": "promptString",
      "description": "Nom du tool (kebab-case, ex: products, newsletter, analytics)",
      "default": ""
    }
  ]
}
